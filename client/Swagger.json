      "patch": {
        "tags": [
          "Client"
        ],
        "summary": "Partial update client",
        "description": "Partial update client",
        "operationId": "partialUpdate",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Client ID",
