  },
  "components": {
    "schemas": {
      "ClientRequestDto": {
        "type": "object",
        "properties": {
          "dni": {
            "type": "string",
            "description": "Client DNI",
            "example": "12345678"
          },
          "name": {
            "type": "string",
            "description": "Client name",
            "example": "John Doe"
          },
          "password": {
            "type": "string",
            "description": "Password",
            "example": "123456"
          },
          "gender": {
            "type": "string",
            "description": "Client Gender",
            "example": "M"
          },
          "age": {
            "type": "integer",
            "description": "Client age",
            "format": "int32",
            "example": 25
          },
          "address": {
            "type": "string",
            "description": "Client address",
            "example": "Av. Los Pinos 123"
          },
          "phone": {
            "type": "string",
            "description": "Client phone",
            "example": "987654321"
          },
          "active": {
            "type": "boolean"
          }
        },
        "description": "Client request data transfer object"
      },
      "ClientDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "dni": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "gender": {
            "type": "string"
          },
          "age": {
            "type": "integer",
            "format": "int32"
          },
          "address": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "active": {
            "type": "boolean"
          }
        }
      },
      "PartialClientDto": {
        "type": "object",
        "properties": {
          "active": {
            "type": "boolean"
          }
        },
        "description": "Partial Client DTO"
      }
    }
  }
}